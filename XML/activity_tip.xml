<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:baselineAligned="false"
    tools:context=".TipActivity">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#6F94B8"
    android:id="@+id/tip_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipActivity">

    <TextView
        android:layout_width="290dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:text="Tips for Meditating On-the-Go"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="14dp"
        android:text="1. DON'T meditate and drive!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="14dp"
        android:text="2. Imagine your thoughts are colorful vapors you breathe in and out. Choose a color for positive thoughts and another color for negative thoughts.  "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="14dp"
        android:text="3. Pay attention to your breathe, both when you breathe naturally or breathe deeply."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="14dp"
        android:text="4. Invest in good headphones for best results."/>


</LinearLayout>

    /* slide-out nav bar*/
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:id="@+id/menu_reference"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>