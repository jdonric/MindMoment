<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="43dp"
    android:id="@+id/gradient"
    android:background="@drawable/gradient_three"
    android:baselineAligned="false"
    android:paddingHorizontal="35dp"
    tools:context=".MainActivity">

    /* CONTAINING ALL ELEMENTS */
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



  /*black image */
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pose"/>

    </LinearLayout>


    /* buttons and reset */
    <LinearLayout
android:layout_width="140dp"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
android:orientation="vertical"
android:layout_weight="1"
android:layout_alignParentRight="true">



<Button
    android:id="@+id/rest"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:text="Rest"
    android:background="#AB8EE3 "
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="7dp"
    app:fontFamily="sans-serif"
    android:textSize="16sp"
    android:elevation="7dp"
    android:textColor="#5B4471  "
    android:layout_marginBottom="12dp"
    android:textAllCaps="false"/>

<Button
    android:id="@+id/reflect"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:layout_marginBottom="12dp"
    android:text="Reflect"
    android:elevation="7dp"
    android:layout_marginTop="7dp"
    app:fontFamily="sans-serif"
    android:textSize="16sp"
    android:textColor="#5B4471  "
    android:background="#AB8EE3 "
    android:layout_gravity="center_horizontal"
    android:textAllCaps="false"/>

<Button
    android:id="@+id/emmerse"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:layout_marginBottom="12dp"
    android:text="Immerse"
    android:elevation="5dp"
    android:layout_marginTop="7dp"
    android:background="#AB8EE3  "
    app:fontFamily="sans-serif"
    android:textSize="16sp"
    android:textColor="#5B4471  "
    android:layout_gravity="center_horizontal"
    android:textAllCaps="false"/>

<Button
    android:id="@+id/awaken"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:text="Awaken"
    android:elevation="7dp"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="7dp"
    app:fontFamily="sans-serif"
    android:textSize="16sp"
        android:textColor="#5B4471"
    android:background="#AB8EE3 "
    android:layout_gravity="center_horizontal"
    android:textAllCaps="false"

    />

        /* reset button */
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/pause"

        android:layout_width="45dp"
        android:layout_height="35dp"
    android:background="#5B4471"
        android:text="||"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#AB8EE3"
        android:textSize="12dp"
        android:elevation="7dp"
        android:layout_marginTop="127dp"
        android:layout_marginLeft="20dp"/>


    <Button
        android:id="@+id/reset"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:background="#5B4471"
        android:text="Reset"
        android:elevation="7dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#AB8EE3"
        android:textSize="11dp"
        android:layout_marginTop="127dp"
        android:layout_marginLeft="15dp"/>
</LinearLayout>

</LinearLayout>

    </LinearLayout>
    </RelativeLayout>
